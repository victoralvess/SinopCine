<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.victoralvess.sinopcine">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_clapperboard"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMovieActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />                

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActionAdventureMovieActivity"
            android:label="@string/title_activity_action_adventure_movie"
            android:parentActivityName=".MainMovieActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.victoralvess.sinopcine.MainMovieActivity" />
        </activity>
        <activity
            android:name=".AnimationMovieActivity"
            android:label="@string/title_activity_animation_movie"
            android:parentActivityName=".MainMovieActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.victoralvess.sinopcine.MainMovieActivity" />
        </activity>
        <activity
            android:name=".ComedyMovieActivity"
            android:label="@string/title_activity_comedy_movie"
            android:parentActivityName=".MainMovieActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.victoralvess.sinopcine.MainMovieActivity" />
        </activity>
        <activity
            android:name=".HorrorMovieActivity"
            android:label="@string/title_activity_horror_movie"
            android:parentActivityName=".MainMovieActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.victoralvess.sinopcine.MainMovieActivity" />
        </activity>
    </application>

</manifest>